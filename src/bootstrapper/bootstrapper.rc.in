            VALUE "ProductName", "${BOOTSTRAPPER_TARGET_NAME}"
            VALUE "ProductVersion", "${PROJECT_VERSION_MAJOR}.${PROJECT_VERSION_MINOR}.${PROJECT_VERSION_PATCH}.${PROJECT_VERSION_TWEAK}"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
